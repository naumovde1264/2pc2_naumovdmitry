<Window x:Class="PZ_7_htlfrnjh.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PZ_7_htlfrnjh"
        mc:Ignorable="d"
        
        Title="CreateFileWindow" Height="150" Width="200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock>Введите имя файла:</TextBlock>
        <TextBox x:Name= "fileNameBox" Grid.Row="1" MinWidth="16" Margin="0,0,10,0">file1</TextBox>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60"
                Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" MinWidth="60" Click="Button_Click">Отмена</Button>
        </WrapPanel>
    </Grid>
</Window>
